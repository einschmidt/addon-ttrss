#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant  Add-on: TT-RSS
# Runs the TT-RSS backend daemon
# ==============================================================================

bashio::log.info "Starting TT-RSS update daemon..."

while [ -e /var/www/ttrss/config.php ]
do
	echo waiting for config.php...
	sleep 3
done

exec php /var/www/ttrss/update_daemon2.php
